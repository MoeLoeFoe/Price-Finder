{
  "manifest_version": 3,
  "name": "Best Price Finder",
  "version": "1.0",
  "description": "Shopping assistant extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["results.html", "results.js", "results.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
